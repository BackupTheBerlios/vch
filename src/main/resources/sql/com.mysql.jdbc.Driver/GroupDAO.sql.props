SQL_FIND_BY_KEY = SELECT * FROM {GROUPS_TABLE} WHERE name = ?

SQL_INSERT_GROUPS = INSERT INTO {GROUPS_TABLE} \
                         (name, DESCRIPTION) \
                         values(?,?)

SQL_UPDATE_GROUPS = UPDATE {GROUPS_TABLE} SET \
                         name = ?, \
                         description = ? \
                     WHERE name = ?

SQL_DELETE_GROUPS = DELETE FROM {GROUPS_TABLE} WHERE name = ?

SQL_LIST_ALL = SELECT * FROM {GROUPS_TABLE} ORDER BY name