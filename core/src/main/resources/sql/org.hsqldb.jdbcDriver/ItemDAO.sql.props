SQL_FIND_BY_KEY = SELECT * FROM {ITEM_TABLE} WHERE guid = ?

SQL_FIND_BY_PROPERTY = SELECT * FROM {ITEM_TABLE} WHERE %prop% = ?

SQL_INSERT_ITEM = INSERT INTO {ITEM_TABLE} \
                      (title, link, description, pubdate, thumbnail, guid, enclosureKey, channelKey) \
                      values(?,?,?,?,?,?,?,?)

SQL_UPDATE_ITEM = UPDATE {ITEM_TABLE} SET \
                      title = ?, \
                      link = ?, \
                      description = ?, \
                      thumbnail = ?, \
                      pubdate = ?, \
                      enclosureKey = ?, \
                      channelKey = ? \
                  WHERE guid = ?

SQL_DELETE_ITEM = DELETE FROM {ITEM_TABLE} WHERE guid = ?

SQL_FIND_BY_CHANNEL = SELECT * FROM {ITEM_TABLE} WHERE channelkey = ? ORDER BY PUBDATE DESC, TITLE

SQL_LIST_LATEST = SELECT LIMIT 0 ? * FROM {ITEM_TABLE} ORDER BY PUBDATE DESC

SQL_GET_ALL = SELECT * FROM {ITEM_TABLE}

SQL_SEARCH_ITEM = SELECT * FROM {ITEM_TABLE} \
                  WHERE \
                        LOWER(TITLE) LIKE ? \
                  OR \
                        LOWER(DESCRIPTION) LIKE ? \
                  ORDER BY PUBDATE DESC
